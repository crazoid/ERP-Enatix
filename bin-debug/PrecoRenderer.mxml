<?xml version="1.0" encoding="utf-8"?>
<s:MXAdvancedDataGridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
								  xmlns:s="library://ns.adobe.com/flex/spark" 
								  xmlns:mx="library://ns.adobe.com/flex/mx" 
								  focusEnabled="true">
	<s:layout>
		<s:HorizontalLayout horizontalAlign="right" verticalAlign="middle"
							paddingRight="7"/>
	</s:layout>
	<fx:Declarations>
		<s:CurrencyFormatter id="formatador" currencySymbol="R$" useCurrencySymbol="true"
							 fractionalDigits="2" trailingZeros="true"
							 decimalSeparator=","/>
	</fx:Declarations>
	<s:Label id="lblData" text="{formatador.format(listData.label)}" />
</s:MXAdvancedDataGridItemRenderer>
